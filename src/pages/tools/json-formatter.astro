---
import Layout from '../../layouts/Layout.astro';
import JsonFormatter from '../../components/converters/JsonFormatter';
import { PostHogBoundary } from '../../components/PostHogBoundary.tsx';

const title = 'JSON Formatter - Validate, Format & Minify JSON Online';
const description = 'Free online JSON formatter and validator. Beautify, minify, and validate JSON data with syntax highlighting and error detection.';
---

<Layout title={title} description={description} toolType="developer">
  <PostHogBoundary client:load>
    <JsonFormatter />
  </PostHogBoundary>
</Layout>
