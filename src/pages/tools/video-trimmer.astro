---
import Layout from '../../layouts/Layout.astro';
import VideoConverter from '../../components/converters/VideoConverter.tsx';
import '../../styles/global.css';

const title = 'Video Trimmer - Cut and Trim Videos Online';
const description = 'Trim and cut your videos to exact timestamps. Simple, fast, and free video trimming tool that works in your browser.';
---

<Layout title={title} description={description} toolType="video">
  <main>
    <VideoConverter
      targetFormat="mp4"
      title="Video Trimmer"
      description="Cut and trim your videos to the perfect length. Specify start and end times for precise video editing."
      client:load
    />
  </main>
</Layout>
