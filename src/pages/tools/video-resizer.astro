---
import Layout from '../../layouts/Layout.astro';
import VideoResizer from '../../components/converters/VideoResizer.tsx';
import '../../styles/global.css';

const title = 'Video Resizer - Change Video Resolution Online';
const description = 'Resize videos to different resolutions like 1080p, 720p, or 480p. Free video resizing tool with quality preservation.';
---

<Layout title={title} description={description} toolType="video">
  <main>
    <VideoResizer
      title="Video Resizer"
      description="Change your video resolution with a live preview. See dimension changes before applying them."
      client:load
    />
  </main>
</Layout>
