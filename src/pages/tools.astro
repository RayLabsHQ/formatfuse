---
import Layout from '../layouts/Layout.astro';
import AllToolsGrid from '../components/AllToolsGrid.tsx';
import '../styles/global.css';

const title = "All File Conversion Tools";
const description = "Browse 50+ free online file converters. Convert PDFs, images, documents, and more. Privacy-first tools that work in your browser - no uploads or installations required.";
const keywords = "all converters, file conversion tools, pdf tools, image tools, document tools, developer tools, free converters, online tools, browser-based tools, formatfuse";
---

<Layout 
  title={title}
  description={description}
  keywords={keywords}
>
  <main>
    <div class="bg-secondary/[0.3] py-12">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl font-bold mb-4">All Conversion Tools</h1>
          <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
            Browse our complete collection of file converters. Everything runs in your browser - no uploads, no waiting.
          </p>
        </div>
      </div>
    </div>
    
    <AllToolsGrid client:load />
  </main>
</Layout>